<Window x:Class="CitySimulatorWPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        
        xmlns:views="clr-namespace:CitySimulatorWPF.Views"
        xmlns:components="clr-namespace:CitySimulatorWPF.Views.components"
        mc:Ignorable="d"
        Title="CitySimulator" Height="450" Width="800" WindowState="Maximized">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>

        <components:Header Grid.Row="0" Grid.ColumnSpan="2" DataContext="{Binding HeaderPanelVM}"/>

        <components:Map DataContext="{Binding MapVM}" Grid.Row="1" Grid.Column="0" BorderThickness="2" BorderBrush="Black"/>

        <components:Legend Grid.Row="1" Grid.Column="1"/>

        <components:ControlGuide Grid.Row="1" Grid.Column="0"/>
        
        <components:BuildingPanel DataContext="{Binding BuildingPanelVM}" Grid.Row="2" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
