<Window x:Class="CitySkylines_REMAKE.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        
        xmlns:views="clr-namespace:CitySkylines_REMAKE.Views"
        xmlns:components="clr-namespace:CitySkylines_REMAKE.Views.components"
        xmlns:local="clr-namespace:CitySkylines_REMAKE"
        mc:Ignorable="d"
        Title="Cities Skylines: Remake" Height="450" Width="800" WindowState="Maximized">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <components:Header Grid.Row="0"/>

        <views:MapView DataContext="{Binding MapVM}" Grid.Row="1" Grid.Column="1" BorderThickness="2" BorderBrush="Black"/>


        <components:Legend Grid.Row="1"/>

        <components:ControlGuide Grid.Row="1"/>

        <components:BuildingsPanel Grid.Row="2"/>
    </Grid>
</Window>
