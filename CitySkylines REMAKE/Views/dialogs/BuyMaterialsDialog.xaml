<Window x:Class="CitySkylines_REMAKE.Views.dialogs.BuyMaterialsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CitySkylines_REMAKE.Views.dialogs"
        mc:Ignorable="d"
        Title="BuyMaterialsDialog" Height="450" Width="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
               Text="Выберите материалы для покупки:" 
               FontSize="16" 
               FontWeight="Bold"
               Margin="0,0,0,10"/>

        <TextBlock Grid.Row="1"
               FontSize="12"
               Foreground="Gray"
               Margin="0,0,0,10">
        <Run Text="Доступный бюджет: "/>
        <Run FontWeight="Bold"/>
        </TextBlock>

        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Margin="0,0,0,10">
            <ItemsControl x:Name="MaterialsItemsControl">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="LightGray" 
                            BorderThickness="1" 
                            CornerRadius="5" 
                            Padding="10" 
                            Margin="0,0,0,5"
                            Background="#F9F9F9">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" 
                                       FontWeight="Bold" 
                                       VerticalAlignment="Center"/>

                                <TextBlock Grid.Column="1" 
                                       VerticalAlignment="Center">
                                <Run Text="Цена: "/>
                                <Run FontWeight="Bold"/>
                                </TextBlock>

                                <TextBox Grid.Column="2" 
                                     x:Name="QuantityTextBox"
                                     VerticalAlignment="Center"
                                     Padding="5"
                                     TextAlignment="Center"/>

                                <TextBlock Grid.Column="3" 
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Right"
                                       Margin="10,0,0,0">
                                <Run Text="Итого: "/>
                                <Run FontWeight="Bold" Foreground="Green"/>
                                </TextBlock>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <Border Grid.Row="3" 
            Background="#E8F5E9" 
            Padding="10" 
            CornerRadius="5"
            Margin="0,0,0,10">
            <TextBlock FontSize="14" FontWeight="Bold">
            <Run Text="Общая стоимость: "/>
            <Run x:Name="TotalRevenueText" Text="0$" Foreground="Green"/>
            </TextBlock>
        </Border>

        <StackPanel Grid.Row="4" 
                Orientation="Horizontal" 
                HorizontalAlignment="Right">
            <Button Content="Купить" 
                Width="100" 
                Height="30"
                Background="LightGreen"
                Margin="0,0,10,0"/>
            <Button Content="Отмена" 
                Width="100" 
                Height="30" 
                IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
