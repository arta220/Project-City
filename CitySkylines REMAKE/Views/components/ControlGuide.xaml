<UserControl x:Class="CitySimulatorWPF.Views.components.ControlGuide"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CitySimulatorWPF.Views.components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Canvas>
        <Border Canvas.Right="10"
                Canvas.Top="10"
                Width="Auto"
                Height="Auto"
                Background="White"
                BorderBrush="Gray"
                BorderThickness="1"
                CornerRadius="5"
                Padding="10">
            <StackPanel>
                <TextBlock Text="Управление" FontWeight="Bold" Margin="0,0,0,0" />
                <Separator Margin="0,8,0,8" />
                <TextBlock Text="ПКМ (зажать) - Перемещение карты" Margin="0,0,0,5" />
                <TextBlock Text="ЛКМ - Разместить здание" Margin="0,0,0,5" />
                <TextBlock Text="ЛКМ (зажать и переместить) - Размещение дорог" Margin="0,0,0,5" />
                <TextBlock Text="Ctrl + Колесо мыши - масштабирование карты" Margin="0,0,0,5" />
            </StackPanel>
        </Border>
    </Canvas>
</UserControl>
