<UserControl x:Class="CitySimulatorWPF.Views.components.Header"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:CitySimulatorWPF.ViewModels"
             xmlns:local="clr-namespace:CitySimulatorWPF.Views.components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>
    
    <Grid Background="#F0F0F0" Height="50">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="10,0" VerticalAlignment="Center">
            <Button Content="❌"
                ToolTip="Отменить размещение"
                Background="Transparent"
                BorderThickness="0"
                FontSize="16"
                Margin="0,0,10,0"
                Visibility="{Binding IsBuildingMode, Converter={StaticResource BooleanToVisibilityConverter}}"/>
            <Button Content="💾"
                ToolTip="Сохранить игру"
                Background="#87CEEB"
                Margin="0,0,5,0"
                Padding="3,2" />

            <Button Content="📂"
                ToolTip="Загрузить игру"
                Background="#98FB98"
                Margin="0,0,5,0"
                Padding="3,2" />

            <Button Content="🛍️ Купить"
                Command="{Binding BuyMaterialsCommand}"
                ToolTip="Открыть диалог покупки материалов"
                Background="#90EE90"
                Margin="0,0,10,0"
                Padding="5,2" />

            <Button Content="💰 Продать"
                Command="{Binding SellMaterialsCommand}"
                ToolTip="Продать материалы"
                Background="#FFD700"
                Margin="0,0,5,0"
                Padding="3,2" />

            <Button Content="🗑️ Очистить" 
                ToolTip="Удалить все здания"
                Background="LightCoral"
                Margin="0,0,10,0"
                Padding="5,2"/>
            
            <Button Content="🔨Удалить"
                    Command="{Binding SetRemoveModeCommand}"
                    ToolTip="Удаление зданий"
                    Background="#FFA07A"
                    Margin="0,0,10,0"
                    Padding="5,2"/>

            <Button Content="📦 Ресурсы" 
                Command="{Binding ShowResourcesInfoCommand}"
                ToolTip="Показать инвентарь материалов"
                Background="LightCyan"
                Margin="0,0,10,0"
                Padding="5,2"/>

            <Button Content="📊 Графики"
                    Command="{Binding ShowChartsCommand}"
                    ToolTip="Показать графики статистики"
                    Background="LightGreen"
                    Margin="0,0,10,0"
                    Padding="5,2"/>

            <TextBlock Text="👤" FontSize="20" Margin="0,0,3,0" VerticalAlignment="Center" FontWeight="Bold" />
            <TextBlock Text="{Binding CitizenCount}" FontSize="20" VerticalAlignment="Center" FontWeight="Bold" />
            <Button Margin="5"
                    Padding="5,2"
                    Command="{Binding DataContext.MapVM.ToggleResourcesCommand,
                          RelativeSource={RelativeSource AncestorType=Window}}">
                <Button.Style>
                    <Style TargetType="Button">
                        <!-- Текст по умолчанию, когда ресурсы показываются -->
                        <Setter Property="Content"
                                Value="Скрыть ресурсы" />
                        <Style.Triggers>
                            <!-- Если ShowResources == False, меняем текст -->
                            <DataTrigger Value="False"
                                         Binding="{Binding DataContext.MapVM.ShowResources,
                                               RelativeSource={RelativeSource AncestorType=Window}}">
                                <Setter Property="Content"
                                        Value="Показать ресурсы" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>

        <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10,0">
            <StackPanel Orientation="Horizontal" Margin="0,0,10,0">
                <TextBlock Text="⚡" FontSize="20" Margin="0,0,3,0" VerticalAlignment="Center" />
                <TextBlock Text="0" FontSize="20" VerticalAlignment="Center" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,10,0">
                <TextBlock Text="🌊" FontSize="20" Margin="0,0,3,0" VerticalAlignment="Center" />
                <TextBlock Text="0" FontSize="20" VerticalAlignment="Center" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,10,0">
                <TextBlock Text="⛽" FontSize="20" Margin="0,0,3,0" VerticalAlignment="Center" />
                <TextBlock Text="0" FontSize="20" VerticalAlignment="Center" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" Cursor="Hand" ToolTip="Кликните для подробностей">
                <TextBlock Text="💵" Margin="0,0,3,0" FontSize="20" VerticalAlignment="Center" />
                <TextBlock Text="{Binding CityBudget, StringFormat='{}{0:N0}$'}" FontSize="20" VerticalAlignment="Center" FontWeight="Bold" />
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
