<UserControl x:Class="CitySkylines_REMAKE.Views.components.Map"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             
             xmlns:views="clr-namespace:CitySkylines_REMAKE.Views"
             xmlns:vm="clr-namespace:CitySkylines_REMAKE.ViewModels"
             xmlns:local="clr-namespace:CitySkylines_REMAKE.Views.components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <vm:MapVM/>
    </UserControl.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="500"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="500"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <views:MapView DataContext="{Binding MapVM}" Grid.Row="1" Grid.Column="1" BorderThickness="2" BorderBrush="Black"/>
    </Grid>
</UserControl>
